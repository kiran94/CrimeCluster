@model CrimeTypeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel='stylesheet' type="text/css" href='~/Content/Site.css' />

<h1>Crime Cluster</h1>

<div id='map'></div>

<div id='controls' class='section'>
	@Html.LabelFor(x => Model.type, new { id = "crimelabel" })
	@Html.EnumDropDownListFor(x => Model.type, new { id = "crimelabeldropdown" })

	<div id='results'>
		Incidents Found: <span id='locationsfound'></span>
	</div>

	<span id='loader'>Retrieving..</span>
</div>

<div id='clusters' class='section'>
	@Html.Label("Clusters", new { id = "clusterlabel" })
	<button id='clusterbutton'>Cluster</button>

	<span id='clustersfound'>Clusters Found: <span id='numofclusters'></span></span>
	<div id='legend-content'></div>
</div>

<script type='text/javascript' src='~/Scripts/jquery-3.1.1.min.js'></script>
<script type='text/javascript' src='~/Scripts/GoogleMaps.js'></script>
<script type='text/javascript' src=@String.Format("https://maps.googleapis.com/maps/api/js?key={0}&callback=initMap", ViewBag.GoogleMapsKey)></script>